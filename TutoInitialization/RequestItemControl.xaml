<UserControl x:Class="Tuto.Init.RequestItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Prompt}" TextWrapping="Wrap"/>
        <DockPanel x:Name="BrowsePanel">
            <Button x:Name="BrowseButton" DockPanel.Dock="Right">Browse</Button>
            <TextBox x:Name="SuggestedPath" Text="{Binding SuggestedPath}"></TextBox>
        </DockPanel>
    </StackPanel>
</UserControl>
