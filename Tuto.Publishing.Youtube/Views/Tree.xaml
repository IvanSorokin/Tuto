<UserControl x:Class="Tuto.Publishing.Youtube.Views.Tree"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:m="clr-namespace:Tuto.Publishing.Youtube"
             xmlns:v="clr-namespace:Tuto.Publishing.Youtube.Views"
             mc:Ignorable="d"              
             d:DesignHeight="300" d:DesignWidth="300">
    <TreeView ItemsSource="{Binding}">
        <TreeView.Resources>
            <HierarchicalDataTemplate DataType="{x:Type m:TopicWrap}" ItemsSource="{Binding Children}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Width="300" Text="{Binding Topic.Caption}"/>
                    <TextBlock Text="{Binding PlaylistLinkShort}"/>
                </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type m:VideoWrap}" ItemsSource="{Binding Children}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Width="300" Text="{Binding Finished.Name}"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock>
                            <v:MyHyperlink NavigateUri="{Binding VideoURLFull}">
                                <TextBlock Text="{Binding VideoURLShort}"/>
                            </v:MyHyperlink>
                            </TextBlock>
                        <TextBlock FontSize="8" Text="{Binding YoutubeName}"/>
                    </StackPanel>
                </StackPanel>
            </HierarchicalDataTemplate>
        </TreeView.Resources>
    </TreeView>
</UserControl>
