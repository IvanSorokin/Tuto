<Window x:Class="Tuto.Publishing.Youtube.Views.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter password" SizeToContent="Height" Width="300">
    <StackPanel>
        <Label>Enter password for Youtube service</Label>
        <PasswordBox x:Name="password"></PasswordBox>    
        <TextBlock TextWrapping="WrapWithOverflow">Tuto does not store your password on the drive and therefore requires its input at each run</TextBlock>
        <Button x:Name="ok">Ok</Button>
    </StackPanel>
</Window>
