<Window x:Class="TestProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <TreeView>
        <TreeView.Resources>
            <HierarchicalDataTemplate DataType="ILecture" ItemsSource="{Binding Items}">
                <Rectangle Fill="Red" Width="100" Height="10"/>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate DataType="IVideo" ItemsSource="{Binding Items}">
                <Rectangle Fill="Blue" Width="100" Height="10"/>
            </HierarchicalDataTemplate>
        </TreeView.Resources>
    </TreeView>
</Window>
