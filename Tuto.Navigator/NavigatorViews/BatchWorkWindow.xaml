<Window x:Class="Tuto.Navigator.BatchWorkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        MinWidth="300px"
        Title="Tasks queue" SizeToContent="WidthAndHeight" Closing="Window_Closing" Deactivated="Window_Deactivated">
    <StackPanel>
        <Button Content="Cancel" x:Name="CancelButton"/>
        <DataGrid IsReadOnly="true" x:Name="Tasks" ItemsSource="{Binding}" AutoGenerateColumns="False" VerticalScrollBarVisibility="Auto" MaxHeight="300">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                <DataGridTemplateColumn Header="Exception">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox TextWrapping="Wrap" Text="{Binding ExceptionMessage}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </StackPanel>
</Window>
