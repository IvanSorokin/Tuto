<UserControl x:Class="Tuto.Navigator.TopicsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:model="clr-namespace:Tuto.Model;assembly=Tuto"
             xmlns:navigator="clr-namespace:Tuto.Navigator"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Command="{Binding Add}">Add</Button>
            <Button Command="{Binding Remove}">Remove</Button>
        </StackPanel>
        <TreeView x:Name="Tree" ItemsSource="{Binding Root}">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type model:Topic}" ItemsSource="{Binding Items}">
                    <TextBlock Text="{Binding Caption}"/>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </DockPanel>
</UserControl>
