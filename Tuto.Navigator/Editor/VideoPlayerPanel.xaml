<UserControl x:Class="Tuto.Navigator.Editor.VideoPlayerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ed="clr-namespace:Tuto.Navigator.Editor"
             Focusable="True"
             IsTabStop="True"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>
            <MediaElement 
                    x:Name="FaceVideo" 
                    Grid.Column="0"/>
            <MediaElement 
                    x:Name="DesktopVideo"  
                    Grid.Column="1"/>
        </Grid>
        <StackPanel Orientation="Vertical">
            <Grid>
                <ed:ModelView x:Name="ModelView" DataContext="{Binding}"/>
                <ed:Slider x:Name="Slider" DataContext="{Binding}"/>
                <ed:PatchPanel x:Name="Patches"/>
            </Grid>
        </StackPanel>
    </StackPanel>
</UserControl>
